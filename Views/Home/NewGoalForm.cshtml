@using System.Activities.Expressions
@using System.Web.UI.WebControls
@model BodyCompositionCalculator.Models.Goal


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<head>
    <script src="https://kit.fontawesome.com/7ec14fb925.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    @Styles.Render("~/Content/datepicker")
</head>


<html lang="en">

<body>

    <h2>Edit Goal</h2>
    @Html.ValidationSummary()

    @using (Html.BeginForm("AddNewGoal", "Home", FormMethod.Post, new { @id = "newGoalForm", @class = "form-group" }))
    {
        <label>Start Date</label>
        <div class="form-group">
            <div id="startDate" , class="input-group date datepicker">
                @Html.TextBoxFor(model => model.StartDate, "{0: dd MMM yyyy}", new { @id = "startDateText", @class = "form-control" })
                <div class="input-group-append input-group-addon">
                    <span class="input-group-text">
                        <span class="fa fa-calendar"></span>
                    </span>
                </div>
            </div>
            @Html.ValidationMessageFor(m => m.StartDate)
        </div>
            <label>End Date</label>
            <div class="form-group">
                <div id="endDate" , class="input-group date datepicker">
                    @Html.TextBoxFor(model => model.EndDate, "{0: dd MMM yyyy}", new { @id = "endDateText", @class = "form-control" })
                    <div class="input-group-append input-group-addon">
                        <span class="input-group-text">
                            <span class="fa fa-calendar"></span>
                        </span>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.EndDate)
            </div>



            @*<p>Working Backup</p>
        <div class="input-group date datepicker">
            @Html.TextBoxFor(model => model.EndDate, "{0: dd MMM yyyy}", new { @class = "form-control", @id = "startDate" })
            <div class="input-group-append input-group-addon">
                <span class="input-group-text"><span class="fa fa-calendar"></span></span>
            </div>
        </div>

