
@{
    ViewBag.Title = "HomeNoLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    @Styles.Render("~/Content/my-styles/shared-styles.css")

</head>

<body>


<div style="height: 90vh; min-width:400px " id="main" class="d-flex align-items-center">

    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-6 pt-5 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-between">
                <h1 class="mb-4" style="font-family: Raleway; font-weight: bold ">Set and achieve your body goal</h1>
                <a href="Account/Register" >
                    <h2 class="mb-4" style="font-family: Raleway">Sign up now for free. </h2></a>
                <h6 class="mb-4" style="font-family:Roboto">Set a weight or body fat percentage goal. Receive personalised
                    daily target calories which update as you check in to get you to your goal on 
                    time. 
                    You can easily track your progress using the progress graph</h6>
                <a href="Account/Register" class="btn btn-cust-4 mb-4">Register</a>
                <a class="mb-2" href="Account/Login">
                    <h6 class="mb- text-center" style="font-family:Roboto">Already a member?</h6>
                </a>
                <a href="Account/Login" class="btn btn-cust-4">Login</a>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 ">
                <img class="img-fluid" alt="Responsive image" src="~/Content/images/pexels-victor-freitas-841130.jpg">
            </div>
        </div>
    </div>

</div>



</body>



</html>